<div class="container">
  <div class="header">

    <img src="https://res.cloudinary.com/teepublic/image/private/s--LhEOsEDZ--/t_Preview/b_rgb:484849,c_limit,f_jpg,h_630,q_90,w_630/v1484814181/production/designs/1123505_1.jpg">

  </div>

  <div class="cntrbox">


    <div id="ltlbox" class="lftbox">


      <h2>Fresh Burgers!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block eat=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div id="ltlbox" class="rghtbox">


      <h2>Take Home Burgers!</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block eat=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div id="ltlbox" class="addbox">


    <h2>Add a burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">Devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> Eat Out!<br>
        <input type="radio" name="devoured" value="0"> Dine In!
      </div>

      <button type="submit">Add burger</button>
    </form>

    <div>
    </div>
